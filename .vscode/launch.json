{
  "version": "0.2.0",
  "configurations": [
    
    {
      "type": "node",
      "request": "launch",
      "name": "nodemon",
      "runtimeExecutable": "nodemon",
      "runtimeArgs": [
        "--inspect"
      ],
      "program": "${workspaceRoot}/src/index.js",
      "restart": true,
      "port": 9229,
      "protocol": "inspector",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Docker",
      "port": 9222,
      "restart": true,
      "timeout": 20000,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/app",
      "outFiles": [
          "${workspaceFolder}/dist/**/*.js"
      ],
      "skipFiles": [
          "<node_internals>/**/*.js",
      ]
  }
  ],
  "compounds": []
}
